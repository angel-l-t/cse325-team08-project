@page "/"
@using FlavorSphere.Model
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

@code {

    List<Recipe> recipes = new List<Recipe>();
    List<Ingredient> ingredients = new List<Ingredient>();

    protected override async Task OnInitializedAsync()
    {
        recipes = await HttpClient.GetFromJsonAsync<List<Recipe>>(NavigationManager.BaseUri + "recipes") ?? new List<Recipe>();
        ingredients = await HttpClient.GetFromJsonAsync<List<Ingredient>>(NavigationManager.BaseUri + "ingredients") ?? new
        List<Ingredient>();
    }

}